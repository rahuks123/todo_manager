<section class="TodoSection">
  <div class="TodoSectionTitle">
    <h2 class="TodoSectionTitle-text"><%= section_title %></h2>
    <p class="TodoSectionTitle-remainingCount"><%= todos.completed.count %>/<%= todos.count %></p>
  </div>
  <ul>
    <% todos.each do |todo| %>
      <div class="TodoItem-container">
        <% if todo.completed%>
          <input class="TodoItem-checkbox" type="checkbox" checked>
          <p style="text-decoration-line: line-through"><%= todo.todo_text%></p>
        <% else %>
          <input class="TodoItem-checkbox" type="checkbox">
          <p><%= todo.todo_text%></p>
        <% end %>
        <% if show_due_date %>
          <p class="TodoItem-date"><%= todo.due_date.to_s (:short) %></p>
        <% end %>
        <a href="javascript:void(0)"><img class="TodoItem-delete"  src="delete.png"  /></a>
      </div>
    <% end %>
  </ul>
</section>
