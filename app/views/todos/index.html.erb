<main>
  <article>
    <h1 class="TodoPage-title">My To-do List</h1>
      <%= form_with(url: "/todos" , method: "post" , class: "AddTodo") do %>
        <%=text_field_tag 'todo_text', nil, class: 'AddTodo-text', placeholder: 'Whats next'%>
        <input class="AddTodo-date" type="date" name="due_date"/>
        <input class="AddTodo-button" type="submit" value="ADD" />
      <% end %>
      <%= render partial: "todo-section", locals: {
        section_title: "Overdue",
        todos: Todo.overdue,
        show_due_date: true} %>

      <%= render partial: "todo-section", locals: {
        section_title: "Due_today",
        todos: Todo.due_today,
        show_due_date: false} %>

      <%= render partial: "todo-section", locals: {
        section_title: "Due_later",
        todos: Todo.due_later,
        show_due_date: true} %>

  </article>
</main>
